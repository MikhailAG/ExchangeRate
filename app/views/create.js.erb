<% if @currency.valid? %>
// Обновление элементов на главной странице перед редиректом или другими действиями.
Turbolinks.visit("<%= currencies_url %>", { action: "replace" })
<% else %>
// Вывод сообщения об ошибке на странице создания валюты.
alert("Ошибка при добавлении курса валюты.");
<% end %>